<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erlin.examen01.Causa"
    android:onClick="zoomBack">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_causa"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descripcion"
        android:id="@+id/Txt_1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La causa es un plato típico y representativo de la gastronomía peruana, con muchas variaciones en cuanto a sus ingredientes. Es de origen precolombino, pues era preparado antiguamente con papa amarilla, la cual tiene textura suave, con limón y ají triturado."
        android:id="@+id/textView"
        android:layout_below="@+id/Txt_1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
